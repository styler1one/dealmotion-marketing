# =============================================================================
# DealMotion Marketing Engine - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys

# -----------------------------------------------------------------------------
# AI / LLM
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...          # Claude API key

# -----------------------------------------------------------------------------
# Text-to-Speech
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=...                # ElevenLabs API key
ELEVENLABS_VOICE_ID=...               # Dutch voice ID

# -----------------------------------------------------------------------------
# Video Generation
# -----------------------------------------------------------------------------
NANOBANANA_API_KEY=...                # NanoBanana API key

# -----------------------------------------------------------------------------
# YouTube API
# -----------------------------------------------------------------------------
YOUTUBE_CLIENT_ID=...                 # Google OAuth Client ID
YOUTUBE_CLIENT_SECRET=...             # Google OAuth Client Secret
YOUTUBE_CHANNEL_ID=...                # Your YouTube channel ID

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./marketing.db

# -----------------------------------------------------------------------------
# Content Settings
# -----------------------------------------------------------------------------
DEFAULT_LANGUAGE=nl                   # nl or en
BRAND_NAME=DealMotion
BRAND_WEBSITE=https://dealmotion.ai
BRAND_TAGLINE=Put your deals in motion

# -----------------------------------------------------------------------------
# Scheduling
# -----------------------------------------------------------------------------
PUBLISH_HOUR=10                       # Hour to publish (24h format)
SHORTS_PER_DAY=1                      # Number of shorts to generate daily


